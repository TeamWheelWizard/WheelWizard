<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Border.SettingsBlockStyle">
        <Setter Property="Background" Value="{StaticResource Neutral900}" />
        <Setter Property="CornerRadius" Value="{StaticResource GlobalCornerRadius}" />
        <Setter Property="Margin" Value="0,0,0,7" />
        <Setter Property="Padding" Value="10" />
        <!-- When there is an error or something, you can change the color here to something, then the edge also changes -->
        <Setter Property="BorderBrush" Value="{StaticResource Neutral900}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <Style Selector="Border.AboutBlockStyle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CornerRadius" Value="{StaticResource GlobalCornerRadius}" />
        <Setter Property="Margin" Value="0,0,0,7" />
        <Setter Property="Padding" Value="10" />
        <!-- When there is an error or something, you can change the color here to something, then the edge also changes -->
        <Setter Property="BorderBrush" Value="{StaticResource Neutral800}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <Style Selector="Border.AboutBlockLineStyle">
        <Setter Property="Background" Value="{StaticResource Neutral800}" />
        <Setter Property="Margin" Value="10,-10" />
        <Setter Property="Width" Value="1" />
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    

    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="0"/>
    </Style>
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter, ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="ListBoxItem Border.BoxItemBackground">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="Padding" Value="7,0"/>
        <Setter Property="Background" Value="{StaticResource Neutral900}"/>
    </Style>
    <Style Selector="ListBoxItem Border.BoxItemBackground:pointerover">
        <Setter Property="Background" Value="{StaticResource Neutral700}"/>
    </Style>
    
    <Style Selector="Control">
        <Setter Property="ToolTip.Placement" Value="Top"/>
    </Style>

    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{StaticResource BlackIsh}"/>
        <Setter Property="Foreground" Value="{StaticResource Neutral300}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="MaxWidth" Value="520"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="{StaticResource GlobalCornerRadius}"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid x:Name="PART_ToolTipChrome" RowDefinitions="Auto,Auto">
                    <Border Grid.Row="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <Path Grid.Row="1"
                          x:Name="PART_ToolTipTail"
                          Width="12"
                          Height="8"
                          Data="M 0 0 L 12 0 L 6 8 Z"
                          Fill="{TemplateBinding Background}"
                          HorizontalAlignment="Center"
                          Margin="0,-1,0,0"
                          Stretch="Fill"
                          IsHitTestVisible="False"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="ToolTip.BubblePointerLeft /template/ Path#PART_ToolTipTail">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="16,-1,0,0"/>
    </Style>
    <Style Selector="ToolTip.BubblePointerMiddle /template/ Path#PART_ToolTipTail">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,-1,0,0"/>
    </Style>
    <Style Selector="ToolTip.BubblePointerRight /template/ Path#PART_ToolTipTail">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,-1,16,0"/>
    </Style>

    <Style Selector="ToolTip.BubbleAnimateIn /template/ Grid#PART_ToolTipChrome">
        <Style.Animations>
            <Animation Duration="0:0:0.04" IterationCount="1" FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.Y" Value="11"/>
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="TranslateTransform.Y" Value="0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="ToolTip.BubbleAnimateOut /template/ Grid#PART_ToolTipChrome">
        <Style.Animations>
            <Animation Duration="0:0:0.04" IterationCount="1" FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.Y" Value="0"/>
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="TranslateTransform.Y" Value="11"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="ToolTip TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Neutral300}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextTrimming" Value="None"/>
    </Style>

    <Style Selector="ContextMenu">
        <Setter Property="Background" Value="{StaticResource BlackIsh}"/>
        <Setter Property="Foreground" Value="{StaticResource Neutral300}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource Neutral300}"/>
    </Style>
    <Style Selector="MenuItem:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Neutral50}"/>
    </Style>
    
    <Style Selector="ContextMenu Separator">
        <Setter Property="Background" Value="{StaticResource Neutral900}"/>
    </Style>
</Styles>
